<Window x:Class="AxisAndAlliesCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AxisAndAlliesCalculator"
        xmlns:Properties="clr-namespace:AxisAndAlliesCalculator.Properties"
        mc:Ignorable="d"
        Title="IPC Calculator" Height="1824" Width="2736" Topmost="False" VerticalAlignment="Top">

    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="BlanchedAlmond"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        ShadowDepth="4"
                        Direction="330"
                        Color="Black"
                        Opacity="0.9"
                        BlurRadius="4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#CD222120" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type RadioButton}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="FontSize" Value="8"/>
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="Red" Opacity="0.8" />
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        ShadowDepth="3"
                        Direction="330"
                        Color="Black"
                        Opacity="1"
                        BlurRadius="3"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type StackPanel}">
            <Setter Property="Orientation" Value="Vertical"/>
        </Style>
    </Window.Resources>
    
    <ScrollViewer
            HorizontalScrollBarVisibility="Visible"
            VerticalScrollBarVisibility="Auto"
            Margin="0,0,0,0"
            Height="1015"
            Width="1915">
        
        <Grid HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/> <!--15-->
            </Grid.RowDefinitions>
            
            <Grid.Background>
                <ImageBrush ImageSource="AandAmap.png" Stretch="Fill"/>
            </Grid.Background>
            <StackPanel x:Name="Spacer1" Grid.Row="1" Grid.Column="1" Width="200" Height="150" />
            <StackPanel x:Name="Spacer2" Grid.Row="2" Grid.Column="2" Width="200" Height="150" />
            <StackPanel x:Name="Germany00" Grid.Column="3" Grid.Row="3" Margin="5,5,0,0">
                <StackPanel x:Name="Header0" Orientation="Horizontal">
                    <TextBlock Text="Germany (10)"></TextBlock>
                    <Image Source="/Resources/Germany.png" Margin="5,0,0,0" Width="20" Height="20" Visibility="Visible" Tag="G_40"/>
                    <Image Source="/Resources/USA.png" Margin="5,0,0,0" Width="20" Height="20" Visibility="Collapsed" Tag="USA_40"/>
                    <Image Source="/Resources/UK.png" Margin="5,0,0,0" Width="20" Height="20" Visibility="Collapsed" Tag="UK_40"/>
                    <Image Source="/Resources/USSR.png" Margin="5,0,0,0" Width="20" Height="20" Visibility="Collapsed" Tag="USSR_40"/>
                </StackPanel>
                <StackPanel x:Name="Axis0" Visibility="Visible">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton
                                    x:Name="Germany0"
                                    VerticalAlignment="Top"                            
                                    GroupName="0"                                 
                                    Content="Germany"
                                    Visibility="Collapsed"
                                    Checked="click0"/>
                    </StackPanel>
                    <StackPanel >
                        <RadioButton
                                    VerticalAlignment="Top"
                                    x:Name="Japan0"
                                    GroupName="0"                          
                                    Content="Japan" 
                                    Visibility="Collapsed"
                                    Checked="click0"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel x:Name="Allies0" Visibility="Visible">
                    <StackPanel>
                        <RadioButton
                                    x:Name="USA0"
                                    VerticalAlignment="Top"
                                    GroupName="0"
                                    Content="USA"
                                    Visibility="Visible"
                                    Checked="click0"/>
                    </StackPanel>
                    <StackPanel>
                        <RadioButton
                                    x:Name="UK0"
                                    VerticalAlignment="Top"
                                    GroupName="0"
                                    Visibility="Visible"      
                                    Content="UK"
                                    Checked="click0"/>
                    </StackPanel>
                    <StackPanel>
                        <RadioButton
                                    x:Name="USSR0"
                                    VerticalAlignment="Top"
                                    GroupName="0"
                                    Content="USSR"
                                    Visibility="Visible"
                                    Checked="click0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel x:Name="EasternCanada400" Grid.Column="0" Grid.Row="0" Margin="5,5,0,0">
                <StackPanel x:Name="Header40" Orientation="Horizontal">
                    <TextBlock Text="  Eastern Canada (3)"></TextBlock>
                    <Image Source="/Resources/Germany.png" Margin="5,0,0,0" Width="20" Height="20" Visibility="Collapsed" Tag="G_40"/>
                    <Image Source="/Resources/Japan.png" Margin="5,0,0,0" Width="20" Height="20" Visibility="Collapsed" Tag="J_40"/>
                    <Image Source="/Resources/UK.png" Margin="5,0,0,0" Width="20" Height="20" Visibility="Visible" Tag="UK_40"/>
                </StackPanel>
                <StackPanel x:Name="Axis40" Visibility="Visible">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton
                                    x:Name="Germany40"
                                    VerticalAlignment="Top"                              
                                    GroupName="40"                                 
                                    Content="Germany"
                                    Visibility="Visible"
                                    Checked="click40"/>
                    </StackPanel>
                    <StackPanel >
                        <RadioButton
                                    VerticalAlignment="Top"
                                    x:Name="Japan40"
                                    GroupName="40"                          
                                    Content="Japan" 
                                    Visibility="Visible"
                                    Checked="click40"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel x:Name="Allies40" Visibility="Visible">
                    <StackPanel>
                        <RadioButton
                                    x:Name="USA40"
                                    VerticalAlignment="Top"
                                    GroupName="40"
                                    Content="USA"
                                    Visibility="Collapsed"
                                    Checked="click40"/>
                    </StackPanel>
                    <StackPanel>
                        <RadioButton
                                    x:Name="UK40"
                                    VerticalAlignment="Top"
                                    GroupName="40"
                                    Visibility="Collapsed"      
                                    Content="UK"
                                    Checked="click40"/>
                    </StackPanel>
                    <StackPanel>
                        <RadioButton
                                    x:Name="USSR40"
                                    VerticalAlignment="Top"
                                    GroupName="40"
                                    Content="USSR"
                                    Visibility="Collapsed"
                                    Checked="click40"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel x:Name="Totals" Grid.Column="1" Grid.Row="15">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Total IPC for Germany = " FontSize="18"/>
                    <TextBlock Text="{Binding Path=GermanyTotal, Mode=OneWay}" FontSize="18" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Total IPC for Japan = " FontSize="18"/>
                    <TextBlock Text="{Binding Path=JapanTotal, Mode=OneWay}" FontSize="18" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Total IPC for the USA = " FontSize="18"/>
                    <TextBlock Text="{Binding Path=USATotal, Mode=OneWay}" FontSize="18" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Total IPC for the UK = " FontSize="18"/>
                    <TextBlock Text="{Binding Path=UKTotal, Mode=OneWay}" FontSize="18" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Total IPC for the USSR = " FontSize="18"/>
                    <TextBlock Text="{Binding Path=USSRTotal, Mode=OneWay }" FontSize="18" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
